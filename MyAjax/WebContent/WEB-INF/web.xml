<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>MyAjax</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
		<servlet-name>InitServlet</servlet-name>
		<servlet-class>com.zzy.city.servlet.InitServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
  </servlet>
  
  <context-param>
		<param-name>sql_dialect</param-name>
		<param-value>mysql</param-value>
	</context-param>
	<context-param>
		<param-name>data_source</param-name>
		<param-value>city</param-value>
	</context-param>
	

	
	<servlet>
		<servlet-name>CityListServlet</servlet-name>
		<servlet-class>com.zzy.city.servlet.ProvListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CityListServlet</servlet-name>
		<url-pattern>/listcity</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>CityListServlet2</servlet-name>
		<servlet-class>com.zzy.city.servlet.CityListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CityListServlet2</servlet-name>
		<url-pattern>/listcity.asp</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>DistListServlet</servlet-name>
		<servlet-class>com.zzy.city.servlet.DistListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DistListServlet</servlet-name>
		<url-pattern>/listdistrict.asp</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>GetCityDetailServlet</servlet-name>
		<servlet-class>com.zzy.city.servlet.GetCityDetailServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GetCityDetailServlet</servlet-name>
		<url-pattern>/getDetail.action</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>GetDistNameServlet</servlet-name>
		<servlet-class>com.zzy.city.servlet.GetDistNameServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GetDistNameServlet</servlet-name>
		<url-pattern>/getDistNameServlet.action</url-pattern>
	</servlet-mapping>
	
	
	<resource-ref>
		<res-ref-name>jdbc/city</res-ref-name>
		<res-auth>Container</res-auth>
	</resource-ref>
	
</web-app>